<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    app:cardCornerRadius="8dp"
    android:layout_margin="16dp"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginVertical="6dp"
        android:orientation="vertical"
        >

        <LinearLayout
            android:id="@+id/item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/pdf_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/png_logo"
                >

            </ImageView>

            <TextView
                android:id="@+id/tvPdfName"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:text="History Chapter 1 notes.pdf"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="9.2dp"
                >

            </TextView>

            <ImageView
                android:id="@+id/pdf_download_button"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="7dp"
                android:layout_marginStart="5.2dp"
                android:src="@drawable/ic_baseline_download_24"
                >

            </ImageView>

        </LinearLayout>



    </LinearLayout>

</androidx.cardview.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">


    <Button
        android:id="@+id/login_buttom"
        android:layout_width="500dp"
        android:layout_height="170dp"
        android:background="@drawable/login_button"
        android:elevation="2dp"
        android:text="Login"
        android:textAllCaps="false"
        android:textSize="60sp"
        android:layout_marginTop="85dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/signup_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Don't have an account?"
        app:layout_constraintEnd_toEndOf="@+id/login_buttom"
        app:layout_constraintStart_toStartOf="@+id/login_buttom"
        app:layout_constraintTop_toBottomOf="@+id/login_buttom"
        android:textSize="40sp"
        android:layout_marginTop="23dp"
        >
    </TextView>

    <TextView
        android:id="@+id/signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:textColor="@color/colorAccent"
        android:textSize="42sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/signup_message"
        app:layout_constraintStart_toStartOf="@+id/signup_message"
        >

    </TextView>



    <EditText
        android:id="@+id/password"
        android:layout_width="800dp"
        android:layout_height="170dp"
        android:layout_marginBottom="600dp"
        android:background="@drawable/custom_input"
        android:elevation="20dp"
        android:ems="10"
        android:hint="Password"
        android:textSize="50sp"
        android:inputType="textPersonName"
        android:paddingStart="60dp"
        android:paddingTop="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:text="Forgot Password?"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        android:textSize="42sp"
        app:layout_constraintEnd_toEndOf="@+id/password"
        app:layout_constraintTop_toBottomOf="@+id/password">

    </TextView>

    <EditText
        android:id="@+id/editTextTextPersonName2"
        android:layout_width="800dp"
        android:layout_height="170dp"
        android:background="@drawable/custom_input"
        android:elevation="20dp"
        android:ems="10"
        android:hint="Email Address"
        android:inputType="textPersonName"
        android:paddingStart="60dp"
        android:paddingTop="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="720dp" />

</androidx.constraintlayout.widget.ConstraintLayout>